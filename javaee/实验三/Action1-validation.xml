<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
<validator type="requiredstring">
        <param name="fieldName">username</param>
        <message>*学号是必填的.</message>
    </validator>
    <validator type="stringlength">
        <param name="fieldName">username</param>
        <param name="maxLength">6</param>
        <param name="minLength">6</param>
        <message>*学号长度应为六位</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldName">name</param>
        <message>*姓名是必填的.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldName">major</param>
        <message>*专业是必填的</message>
    </validator>
    <validator type="date">
        <param name="fieldName">birthdate</param>
        <param name="min">1970/01/01</param>
        <param name="max">2000/01/01</param>
        <message>*出生日期应大于1970-01-01小于2000-01-01</message>
    </validator>

</validators>
